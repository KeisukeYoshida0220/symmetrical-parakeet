<p id="notice"><%= notice %></p>

<h1>蔵書管理アプリ</h1>

<table>
  <thead>
    <tr>
      <th>Book name</th>
      <th>Cover</th>
      <th>Writer</th>
      <th>Price</th>
      <th>Company</th>
      <th>Day</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.book_name %></td>
        <td>
        <%= image_tag book.cover_url%>
        </td>
        <td><%= book.cover_url %></td>
        <td><%= book.writer %></td>
        <td><%= book.price %></td>
        <td><%= book.company %></td>
        <td><%= book.day %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

